<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/subheader_height"
    android:orientation="horizontal"
    android:paddingTop="40dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    >

  <TextView
      android:id="@+id/dayInWeek"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="0dp"
      android:layout_marginTop="0dp"
      android:maxLines="1"
      android:textSize="@dimen/subheader_text_size"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Mon"
      android:textStyle="bold"
      />

  <TextView
      android:id="@+id/date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:textSize="@dimen/subheader_text_size_smaller"
      tools:text="2.9"
      app:layout_constraintStart_toEndOf="@+id/dayInWeek"
      android:layout_marginLeft="8dp"
      app:layout_constraintBaseline_toBaselineOf="@id/dayInWeek"
      />

</android.support.constraint.ConstraintLayout>